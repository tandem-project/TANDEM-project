---
- hosts: localhost
  vars:
  - command_1: wget -O- https://apt.releases.hashicorp.com/gpg
  - command_2: gpg --dearmor
  - command_3: sudo tee /usr/share/keyrings/hashicorp-archive-keyring.gpg
    
  tasks:
  - name: Run GnuPG tool
    ansible.builtin.shell:
      cmd: "{{ command_1 }}" | "{{ command_2 }}"
   
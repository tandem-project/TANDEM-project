FROM ubuntu:18.04

  # - name: Set up a programming environment on Ubuntu Focal
  #   ansible.builtin.apt:
  #     name: "{{ item }}"
  #     update_cache: true
  #   with_items:
  #     - python3-pip
  #     - build-essential
  #     - libssl-dev

---
apiVersion: storage.k8s.io/v1
kind: StorageClass
metadata:
  name: slow
provisioner: kubernetes.io/gce-pd
parameters:
  type: pd-standard
---
apiVersion: storage.k8s.io/v1
kind: StorageClass
metadata:
  name: fast
provisioner: kubernetes.io/gce-pd
parameters:
  type: ps-ssd
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: claimslow
spec:
  accessModes:
    - ReadWriteMany
  storageClassName: slow
  resources:
    requests: 10Gi
---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: claimfast
spec:
  accessModes:
    - ReadWriteMany
  storageClassName: fast
  resources:
    requests:
      storage: 10Gi
---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: slow-pv-volume
  labels:
    type: local
spec:
  storageClassName: slow
  capacity:
    storage: 20Gi
  accessModes:
    - ReadWriteMany
  hostPath:
    path: "/home/vagrant/data/slow/"
---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: fast-pv-volume
  labels:
    type: local
spec:
  storageClassName: fast
  capacity:
    storage: 20Gi
  accessModes:
    - ReadWriteMany
  hostPath:
    path: "/home/vagrant/data/fast/"
---
